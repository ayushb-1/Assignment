{
  "compilerOptions": {
    "target": "ES2020",                  // Specify ECMAScript target version
    "module": "commonjs",                // Specify module code generation
    "moduleResolution": "node",          // Use Node.js module resolution strategy
    "baseUrl": "src",                   // Base directory to resolve non-relative module names
    "outDir": "./dist",                  // Redirect output structure to the 'dist' directory
    "sourceMap": true,                   // Generates corresponding '.map' file
    "noImplicitAny": true,               // Raise error on expressions and declarations with an implied 'any' type
    "strict": true,       
    "esModuleInterop": true,             // Enables emit interoperability between CommonJS and ES Modules
    "isolatedModules": true,          
    "skipLibCheck": true,                // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Disallow inconsistently-cased references to the same file
    "noUnusedLocals": true,
    "noUnusedParameters": true  
  },
  "include": ["src/**/*"],               // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "**/*.spec.ts"]  // Exclude node_modules and test files
}
